    <style>
        .video-container {
            position: relative;
            height: 100%;
        }

        .video-wrapper {
            position: relative;
            height: 100%;
            width: 100%;
        }

        video {
            width: 100%;
            height: 100%;
            background: url("//demosthenes.info/assets/images/polina.jpg") no-repeat;
            background-size: cover;
            transition: 1s opacity;
        }

        .stopfade {
            opacity: 0.5;
        }

        .overlay {
            position: absolute;
            width: 100%;
            height: 100%;
            background: #03a9f4;
            opacity: 5%;
            mix-blend-mode: overlay;
            z-index: 5;
        }

        h1 {
            font-family: 'Roboto', sans-serif;
            font-size: 3rem;
            text-transform: uppercase;
            margin-top: 0;
            letter-spacing: 0.3rem;
        }

        h3 {
            font-family: 'Roboto', sans-serif;
            font-size: 2.5rem;
            margin-top: 0;
            letter-spacing: 0.3rem;
        }

        video {
            display: none;
        }

        #video-wrapper-1 {
            background: url("https://thenewcode.com/assets/images/polina.jpg") #000 no-repeat center center fixed;
        }

        #video-wrapper-2 {
            background: url("https://thenewcode.com/assets/images/polina.jpg") #000 no-repeat center center fixed;
        }

        @media screen and (min-width: 768px) {
            video {
                display: block;
            }

            .video-wrapper-1 {
                background: unset;
            }

            .video-wrapper-2 {
                background: unset;
            }
        }

    </style>

    <div class="w-full bg-gray-700 mx-auto video-background video-container">
